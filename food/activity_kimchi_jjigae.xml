<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kimchi_jjigae">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/kimchi_jjigae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".kimchi_jjigae">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김치찌개"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="재료: 김치, 새우젓, 고추가루, 국간장, 간마늘" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/recipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.돼지고기를 먹기 좋게 자른후 냄비에 물 새우젓을 넣고 강불로 30분 이상 끓여준다"></TextView>
        <TextView
            android:id="@+id/recipe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.김치, 고추가루, 간마늘을 넣어주고 간을 보며 국간장을 넣어준다.(물을 추가적으로 넣어도 좋다)"></TextView>
        <TextView
            android:id="@+id/recipe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3. 20분 더 끓이고 기호에 따라 파나 청양고추를 넣는다"></TextView>

    </LinearLayout>

</LinearLayout>